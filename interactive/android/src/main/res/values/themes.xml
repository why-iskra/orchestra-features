<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Interactive.OrchestraFeatures" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ofia_black</item>
        <item name="colorPrimaryVariant">@color/ofia_black</item>
        <item name="colorPrimaryContainer">@color/ofia_gray</item>
        <item name="colorOnPrimary">@color/ofia_white</item>
