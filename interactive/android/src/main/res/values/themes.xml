        <item name="colorSecondary">@color/ofia_black</item>
        <item name="colorSecondaryVariant">@color/ofia_black</item>
        <item name="colorSecondaryContainer">@color/ofia_gray</item>
        <item name="colorOnSecondary">@color/ofia_white</item>
